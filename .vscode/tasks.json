{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "package (functions)",
			"command": "mvn clean package",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/java-function"
			}
		},
		{
			"label": "generateDebugSymbols",
			"command": "dotnet",
			"args": [
				"${input:getDebugSymbolDll}"
			],
			"type": "process",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/logicapps\\stdhw"
			}
		},
		{
			"type": "func",
			"command": "host start",
			"problemMatcher": "$func-watch",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/logicapps\\stdhw"
			}
		}
	],
	"inputs": [
		{
			"id": "getDebugSymbolDll",
			"type": "command",
			"command": "azureLogicAppsStandard.getDebugSymbolDll"
		}
	]
}